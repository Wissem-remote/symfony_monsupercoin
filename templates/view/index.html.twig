{% extends 'base.html.twig' %}

{% block title %}Acceuil{% endblock %}

{% block body %}
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
{% for annonce in annonces %}
	<div class="col">
		<div class="card shadow-sm">
			<img style="object-fit: cover;"  src="{{ "/uploads/article/"~annonce.image}}" alt="{{ annonce.title}}" class="bd-placeholder-img card-img-top" width="100%" height="225">

				<title>{{ annonce.title }}</title>
				<rect width="100%" height="100%" fill="#55595c"></rect>
			<text class=" text-center" x="50%" y="50%" fill="#eceeef" dy=".4em"> {{ annonce.title }}</text>

			</img>

			<div class="card-body">
				<p class="card-text">{{ annonce.content }}</p>
				<div class="d-flex justify-content-between align-items-center">
					<div class="btn-group">
						<a href={{ path('view_annonce',{id: annonce.id})}} type="button" class="btn btn-sm btn-outline-primary">Voir</a>
					</div>
					<small class="text-muted">Prix : {{ annonce.prix}}</small>
				</div>
			</div>
		</div>
	</div>
	{% endfor %}
	



</div>

{% endblock %}
